<%- include('../partials/header') %>
<body>
    <% if (messages.error) { %>
        <div style="color: red;"><%= messages.error %></div>
    <% } %>
    <% if (messages.success) { %>
        <div style="color: green;"><%= messages.success %></div>
    <% } %>
    <section id="login-layout" class="container">
        <div class="row">
          <div class="col-12 text-center mb-4">
            <p class="fs-4"> <span class="brand-orange">Upscaler</span></p>
            <h2>Request password reset</h2>
          </div>
          <div class="col-12">
            <form action="/auth/forgot-password" method="POST">
              <div class="col-12 mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="col-12 mb-3 d-flex justify-content-end">
                <a href="/login" class="font-14">Back to login</a>
              </div>
              <div class="col-12 mb-4">
                <button class="btn-primary w-100" type="submit">Send reset link</button>
              </div>
            </form>
          </div>
        </div>
      </section>
</body>
</html>
