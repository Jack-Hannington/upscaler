<!-- views/tenant/create-staff.ejs -->
<%- include('../partials/header') %>

<div class="container mt-5">
  <h2>Create New Staff Member</h2>
  
  <form action="/business/<%= tenant.id %>/create-staff" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    
    <div class="mb-3">
      <label for="role" class="form-label">Role</label>
      <select class="form-select" id="role" name="role" required>
        <% roles.forEach(role => { %>
          <option value="<%= role %>"><%= role.replace('_', ' ').toUpperCase() %></option>
        <% }); %>
      </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Create Staff Member</button>
  </form>
</div>

<%- include('../partials/footer') %>